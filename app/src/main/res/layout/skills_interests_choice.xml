<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="myapps.wycoco.com.ethelonstartup.Activities.Register.RegisterStep2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/environmental"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/environment_volunteer"
                android:scaleType="centerInside"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />
            <ImageView
                app:srcCompat="@drawable/ic_check_black_24dp"
                android:id="@+id/environmentCheck"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="gone"/>
        </RelativeLayout>




    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_weight="1">

            <ImageView
                android:id="@+id/livelihood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/livelihood_volunteer"
                android:scaleType="centerInside"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                />
            <ImageView
                app:srcCompat="@drawable/ic_check_black_24dp"
                android:id="@+id/livelihoodCheck"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="gone"/>
    </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/educational"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/education_volunteer"
                android:scaleType="centerInside"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />
            <ImageView
                app:srcCompat="@drawable/ic_check_black_24dp"
                android:id="@+id/educationalCheck"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="gone"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/culinary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/culinary_volunteer"
                android:scaleType="centerInside"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                />
            <ImageView
                app:srcCompat="@drawable/ic_check_black_24dp"
                android:id="@+id/culinaryCheck"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/charity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/charity_volunteer"
                android:scaleType="centerInside"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />
            <ImageView
                app:srcCompat="@drawable/ic_check_black_24dp"
                android:id="@+id/charityCheck"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/sports"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/sports_volunteer"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                />
            <ImageView
                app:srcCompat="@drawable/ic_check_black_24dp"
                android:id="@+id/sportsCheck"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/skillsDoneBtn"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:text="@string/done"
        android:layout_height="40dp"
        android:background="@color/btnRequest"/>
</LinearLayout>
