<?xml version="1.0" encoding="utf-8"?>
<com.phelat.fun.Layouts.Funny xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myapps.wycoco.com.ethelonstartup.Activities.EventDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/feed1"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ICTO Feeding Program"
                style="@style/TextViewRedBig"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USJ-R ICT Organization"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp" />
            </LinearLayout>

            <Button
                android:id="@+id/joinActivityBtn"
                android:layout_width="120dp"
                android:layout_gravity="right"
                android:layout_height="40dp"
                android:text="Join"
                android:textColor="#fff"
                android:background="@drawable/login_ethelon_bg_button"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                />

        </LinearLayout>



    <com.phelat.fun.Widget.FunnyButton
        android:id="@+id/viewDetailsBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:text="VIEW DETAILS"
        app:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">


    </com.phelat.fun.Widget.FunnyButton>
    </LinearLayout>


</com.phelat.fun.Layouts.Funny>
