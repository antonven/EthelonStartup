<?xml version="1.0" encoding="utf-8"?>
<com.phelat.fun.Layouts.Funny xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:id="@+id/funny"
    tools:context="myapps.wycoco.com.ethelonstartup.Activities.EventDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/feed1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    style="@style/TextViewRedBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="ICTO Feeding Program" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="USJ-R ICT Organization" />
            </LinearLayout>

            <Button
                android:layout_weight="1"
                android:id="@+id/joinActivityBtn"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/login_ethelon_bg_button"
                android:text="Join"
                android:textColor="#fff" />

        </LinearLayout>





        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viePagerDetails"
            android:layout_margin="12dp">

        <android.support.design.widget.TabLayout
            android:layout_margin="20dp"
            android:id="@+id/detailsTabs"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/event_details_custom_tab"
            style="@style/customTabDetails"
            app:tabMode="fixed"
            app:tabGravity="fill"
            android:layout_marginBottom="10dp"
            />

        <FrameLayout
            android:id="@+id/frameDetails"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
        </android.support.v4.view.ViewPager>
    </LinearLayout>


</com.phelat.fun.Layouts.Funny>
