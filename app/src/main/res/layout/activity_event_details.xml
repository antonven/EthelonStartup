<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:id="@+id/funny"
    tools:context="myapps.wycoco.com.ethelonstartup.Activities.EventDetailsActivity">

    

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:background="#f8f8f8"
        android:id="@+id/appBarHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:id="@+id/linearHeader"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:layout_collapseMode="parallax"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/eventDetailsImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="parallax"
            app:srcCompat="@drawable/feed1" />

            <include
                layout="@layout/toolbar_custom_layout"
                android:id="@+id/nav_toolbar" />
        </RelativeLayout>

    </LinearLayout>


        </android.support.design.widget.CollapsingToolbarLayout>

        <LinearLayout

            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eventName"
                    style="@style/TextViewRedBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="ICTO Feeding Program" />

                <TextView
                    android:id="@+id/eventHost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textColor="#000"
                    android:paddingBottom="10dp"
                    android:text="USJ-R ICT Organization" />
            </LinearLayout>

            <Button
                android:layout_weight="1"
                android:id="@+id/joinActivityBtn"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_profile_btn"
                android:text="Join"
                android:textColor="#c62828" />
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>



        <android.support.design.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@id/appBarHeader">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/viePagerDetails"
            android:layout_marginTop="12dp">

        <android.support.design.widget.TabLayout
            android:layout_marginTop="20dp"
            android:id="@+id/detailsTabs"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/event_details_custom_tab"
            style="@style/customTabDetails"
            app:layout_scrollFlags="scroll|enterAlways"
            app:tabMode="fixed"
            app:tabGravity="fill"
            android:layout_marginBottom="10dp"
            />

        <FrameLayout
            android:id="@+id/frameDetails"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent">

        </FrameLayout>
        </android.support.v4.view.ViewPager>
        </android.support.design.widget.CoordinatorLayout>


    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
