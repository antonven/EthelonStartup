<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/successRelative"
    tools:context="myapps.wycoco.com.ethelonstartup.Activities.JoinActivitySuccess">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/successImage"
        app:srcCompat="@drawable/checked"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"/>


    <TextView
        android:gravity="center"
        android:id="@+id/successTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Successfully joined event!"
        android:layout_below="@+id/successImage"
        style="@style/TextViewWhite"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
