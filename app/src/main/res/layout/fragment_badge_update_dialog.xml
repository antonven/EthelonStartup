<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="myapps.wycoco.com.ethelonstartup.Fragments.BadgeUpdateDialogFragment">


    <FrameLayout
        android:layout_gravity="center"
        android:id="@+id/frame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateBody"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="YOU HAVE EARNED THE NEWBIE BADGE!"/>

        <ImageView
            android:layout_width="270dp"
            android:layout_height="400dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/badgeImage"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:src="@drawable/medicine_newbie"/>

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/app_name" />


        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/badgeProgress"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_height="25dp"
            app:rcProgress="80"
            app:rcSecondaryProgress="100"
            app:rcReverse="false"
            app:rcMax="150"
            app:rcRadius="5dp"
            app:rcBackgroundPadding="2dp"
            app:rcProgressColor="@color/colorPrimary"
            app:rcSecondaryProgressColor="@color/transparent"
            app:rcBackgroundColor="@color/contentBadgeTitle"
             />

        <!--<ProgressBar-->
            <!--android:id="@+id/startGauge"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="@style/Widget.AppCompat.ProgressBar.Horizontal"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="87dp"/>-->

    </FrameLayout>
    




</FrameLayout>
