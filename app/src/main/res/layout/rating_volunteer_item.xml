<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/rateLinear"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/rateVolunteerImage"
            android:src="@drawable/account"/>

        <LinearLayout
            android:layout_width="260dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:id="@+id/rateVolunteerName"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="16dp"
            android:text="Anton Ven Wycoco"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rateVolunteerRate"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wala pa"
                android:id="@+id/status"/>



        </LinearLayout>

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:tint="#808080"
            android:id="@+id/rateVolunteerStatus"
            app:srcCompat="@drawable/check_ic"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
</LinearLayout>