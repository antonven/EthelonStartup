<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/notificationIcon"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:srcCompat="@drawable/ic_notifications_black_24dp"
        android:layout_centerInParent="true"/>

    <com.nex3z.notificationbadge.NotificationBadge

        android:id="@+id/notifBadge"
        android:layout_toRightOf="@id/notificationIcon"
        android:layout_alignTop="@id/notificationIcon"
        app:nbMaxTextLength="2"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="4dp"
        app:nbBackground="@drawable/badge_bg_with_shadow"
        android:layout_height="28dp" android:layout_width="28dp">

    </com.nex3z.notificationbadge.NotificationBadge>


</RelativeLayout>