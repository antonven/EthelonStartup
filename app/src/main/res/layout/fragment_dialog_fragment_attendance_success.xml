<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="myapps.wycoco.com.ethelonstartup.Activities.HomeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:text="Rate Anton"
                android:id="@+id/rateVolunteerName"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="32sp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/criteriaRec"
                android:layout_width="match_parent"
                android:layout_height="250dp">

            </android.support.v7.widget.RecyclerView>
            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:layout_height="40dp"
                android:layout_marginBottom="40dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/doneRateBtn"
                android:text="Done"
                android:layout_gravity="center_horizontal"

                android:background="@drawable/login_ethelon_bg_button_user"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
