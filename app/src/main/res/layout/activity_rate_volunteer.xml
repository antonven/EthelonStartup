<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="myapps.wycoco.com.ethelonstartup.Activities.HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/groupmateImage"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="10dp"
                android:text="Rate Anton"
                android:id="@+id/rateVolunteerName"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/criteriaRec"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="320dp"
                >

            </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:id="@+id/doneRateBtn"
        android:text="Done"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_ethelon_bg_button_user"/>

</RelativeLayout>
