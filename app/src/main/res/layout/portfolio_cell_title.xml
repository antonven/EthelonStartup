<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_black_gradation"
    android:baselineAligned="false"
    android:padding="8dp"
    android:orientation="horizontal">



    <!-- LEFT TITLE PART -->
    <RelativeLayout
        android:id="@+id/indicatorLine"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#C53F46"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp">


    </RelativeLayout>

    <!-- RIGHT TITLE PART -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:paddingEnd="20dp"
        android:paddingStart="10dp"
        android:paddingRight="20dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewRedBig"
            android:textSize="20sp"
            android:text="I.C.T.O. Feeding Program" />

        <TextView
            android:id="@+id/eventHost"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CICCT ICT Org"
            />


        <ImageView
            android:id="@+id/title_from_to_dots_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:src="@color/contentDividerLine"/>

            <TextView
                android:id="@+id/eventAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="USJ-R Basak Campus, Cebu City"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:weightSum="4">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/imageView"
                android:layout_width="34dp"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"
                android:src="@drawable/calendar_ic"
                 />

            <TextView
                android:layout_weight="1"
                android:id="@+id/eventDate"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="12/25/2017" />

            <ImageView
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:id="@+id/clockImage"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:src="@drawable/clock_ic"

                />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#000"
                android:text="8:00 am"
                android:id="@+id/eventTimeStart"
                />

                </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="2">

                <GridView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@id/gridView"
                    android:numColumns="8"
                    android:horizontalSpacing="5dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center">
                </GridView>

