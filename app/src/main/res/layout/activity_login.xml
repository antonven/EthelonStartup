<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/frame1"
    android:layout_height="match_parent"
    tools:context="myapps.wycoco.com.ethelonstartup.Activities.LoginActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="48dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/login_dotleft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleX="1"
                android:scaleY="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="30dp"
                android:src="@drawable/dotleft" />

            <ImageView
                android:id="@+id/login_dotright"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleX="1"
                android:scaleY="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/dotleft" />
            </LinearLayout>


            <ImageView
                android:padding="3dp"
                android:id="@+id/logo"
                android:src="@drawable/e"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"/>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/inputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/inputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="@string/password"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                style="@style/TextViewWhite"
                android:id="@+id/buttonLogin"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="6dp"
                android:padding="12dp"
                android:background="@color/signature2Color"
                android:text="@string/login" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:weightSum="2">

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/buttonFacebook"
                    android:text="Login with facebook"
                    style="@style/TextViewWhite"
                    android:textSize="12sp"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="#3b5998"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <!--<com.facebook.login.widget.LoginButton-->
                    <!--android:id="@+id/buttonFaceob"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:layout_marginTop="30dp"-->
                    <!--android:layout_marginBottom="30dp" />-->

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/buttonGoogle"
                    style="@style/TextViewWhite"
                    android:text="login with google"
                    android:background="#d34836"
                    android:textSize="12sp"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"/>


            </LinearLayout>

            <TextView
                android:id="@+id/buttonSignup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="@string/no_account_yet_sign_up"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
